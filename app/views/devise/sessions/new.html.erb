
<div class="rounded-lg shadow-2xl mx-60" style="background-color: #B3BFB8;">
  <h2 class="flex justify-center text-4xl pt-4 font-serif text-gray-600">Sign in to Journal App</h2>

  <div class="flex flex-col">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex justify-center">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:'form-control w-2/4 mb-4 mt-5' %>
      </div>

      <div class="flex justify-center">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class:'form-control w-2/4 mb-4' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex justify-center items-baseline">
          <%= f.check_box :remember_me, class:'mr-2' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="flex justify-center">
        <%= f.submit "Sign In", class: 'btn btn-warning mb-3' %>
        
      </div>

      <div class="flex justify-center">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        
      </div>

      <div class="flex justify-center mt-4">No account yet?</div>
      
      <div class="flex justify-center">
        
        <%= link_to "Create an account", new_registration_path(resource_name), class:'btn btn-dark mt-2 mb-3' %>
        
      </div>
      
    <% end %>
      
      

    
    

    
  </div>
</div>
