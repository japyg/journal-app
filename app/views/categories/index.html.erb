<%
=begin%>
 <p id="notice"><%= notice %></p> 
<%
=end%>

<div class="flex justify-start pl-20 mt-8 mb-6">
  <%= link_to 'Add a Category', new_category_path, class: "btn btn-primary" %>
  

</div>


<% if @categories.any? %>
  <div class="grid grid-cols-3 gap-3 justify-items-center mx-20 py-6 px-6 rounded-lg shadow-2xl" style="background-color:#3A4454;">
    <% @categories.each do |category| %>
      <div> 
        <div class="rounded-lg shadow-md py-8 px-16" style="background-color:#FBFFF1;">
            <span class="badge badge-<%= category.badge_color %>">
              <%= category.status %>
            </span>
            <span class="text-secondary">
              <small>
                <%= category.percent_complete %>% complete <br>
                (<%= category.total_complete %>/<%= category.total_tasks %> tasks)
              </small>
            </span>
            <div class="text-lg font-bold pt-3"><%= category.name %></div>
            <div class="text-xs"><%= category.description %></div>

            <div class="pt-4">
                <%= link_to 'Show', category, class: "btn btn-secondary p-1 mr-2" %>
                <%= link_to 'Edit', edit_category_path(category), class: "btn btn-secondary p-1 mr-2" %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary p-1" %>
            </div>
      
            
        </div>
        
      </div>
      
    <% end %>
  </div>
<% end %>
