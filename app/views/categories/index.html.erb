<p id="notice"><%= notice %></p>


<div class="flex justify-center">
  <h1 class="text-3xl">Journal App</h1>
</div>
<div class="flex justify-end mt-8 pr-32 mb-10">
  <%= link_to 'Add a Category', new_category_path, class: "btn btn-primary" %>
</div>

<div class="grid grid-cols-3 gap-4 justify-items-center px-32 place-content-evenly">
  <% @categories.each do |category| %>
    <div> 
      <div class=" p-12 items-start rounded-r border-2 py-6">
          <span class="badge badge-<%= category.badge_color %>">
            <%= category.status %>
          </span>
          <span class="text-secondary">
            <small>
              <%= category.percent_complete %>% complete <br>
              (<%= category.total_complete %>/<%= category.total_tasks %> tasks)
            </small>
          </span>
          <div class="text-lg font-bold pt-3"><%= category.name %></div>
          <div class="text-xs"><%= category.description %></div>

          <div class="pt-5">
              <%= link_to 'Show', category, class: "btn btn-secondary" %>
              <%= link_to 'Edit', edit_category_path(category), class: "btn btn-secondary" %>
              <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
          </div>
    
          
      </div>
       
    </div>
    
  <% end %>
</div>

