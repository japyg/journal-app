<h1>Tasks due today</h1>

<table>
  <tr>
    <th>Due Date</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    
    <td><%= task.date %></td>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    
  </tr>
<% end %>
</table>

